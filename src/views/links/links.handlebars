<div class="container p-4">
   <a href="/links/add" class="btn btn-secondary ml-3 mb-4">Add link</a>
   <div class="row">
      {{#each links}}
         <div class="col-md-6">
            <div class="card text-center">
               <div class="card-body"> 
                  
                     <iframe src={{img}} frameborder="0"></iframe>
                     <h3 class="card-title text-uppercase">
                        {{title}}
                     </h3>
                     <p class="m-3">{{description}}</p>
                     <p>{{stampTotime created_at}}</p>
                     <div class="mt-auto">
                        <a href="/links/delete/{{id}}" class="btn btn-danger">Delete link</a>
                        <a href="/links/update/{{id}}" class="btn btn-primary ml-3">Edit link</a>
                        <form action="/links/search" method="GET" class="mt-3">
                        <input type="hidden" name="videoUrl" value="{{url}}">
                        <button type="submit" class="btn btn-success ml-3">Descargar video</button>
                     </form>
                     </div>
               </div>
            </div>
         </div>

      {{else}}
            <div class="col-md-4 mx-auto">
               <div class="card card-body text-center">
                  <p>No hay ningun links guardados, crea el primero</p>
               </div>
            </div>
      {{/each}}
      

   </div>
</div>